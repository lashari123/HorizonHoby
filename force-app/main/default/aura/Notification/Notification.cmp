<aura:component controller="NotificationController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global" >

    <aura:attribute name="notificationMessage" type="string" default=""/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div class="promo-bar">
        <div class="container">
            <strong>{!v.notificationMessage}</strong>
        </div>
    </div>
    
</aura:component>